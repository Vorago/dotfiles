#!/bin/sh
PROJ=$1
WINS=$(xdotool search --name "^$PROJ ")
WINS_BY_CLASS=$(xdotool search --class "jetbrains-idea")

for byName in $WINS; do
    for byClass in $WINS_BY_CLASS; do
        if [[ $byName = $byClass ]]; then
            i3-msg "[id=\"$byClass\"] focus"
            exit 0
        fi
    done
done

/opt/idea/idea /home/vorago/code/$1 &
